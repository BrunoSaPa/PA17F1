@page
@model NorthwindWeb.Pages.CategoriesModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    <div class="container">
        <div class="jumbotron">
            <h1>
                Category CRUD
            </h1>

<table class="table">

  <thead>
    <tr>
      <th scope="col">#Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody>
    @if (Model.Categories != null)
      {
        @foreach (var category in Model.Categories)
        {
            <tr>
                  <td scope="row">@category.CategoryId</td>
                  <td>@category.CategoryName</td>
                  <td>@category.Description</td>
                  <td>
                      <form method="post" asp-page-handler="Delete" asp-route-id="@category.CategoryId">
                            <td><button>Delete</button></td>
                      </form>
                  </td>
              </tr>
        }
      }
  </tbody>
</table>

<p class="lead">seek help </p>


<div class="container">
    <form method="post"  asp-page-handler="Add">
        <div class="mb-3">
            <label for="Category_CategoryName" class="form-label">Category Name</label>
            <input name="Category_CategoryName" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label for="Category_Description" class="form-label">Description</label>
            <input name="Category_Description" type="text"  class="form-control">
        </div>
        <button type="submit" class="btn btn-primary" >Agregar</button>
    </form>

</div>





